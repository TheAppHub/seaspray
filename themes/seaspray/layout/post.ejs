<main class="py-16">
	<div class="container mx-auto px-4">
		<article class="max-w-4xl mx-auto">
			<!-- Header -->
			<header class="mb-12">
				<h1 class="text-4xl md:text-5xl font-display font-bold text-white mb-6">
					<%- page.title %>
				</h1>
				<div class="flex items-center space-x-4 text-primary-300">
					<time datetime="<%= page.date.format('YYYY-MM-DD') %>">
						<%= page.date.format('MMMM D, YYYY') %>
					</time>
					<% if (page.categories && page.categories.data && page.categories.data.length > 0) { %>
					<span>â€¢</span>
					<span>
						<% page.categories.data.forEach(function(category, index) { %>
						<a
							href="<%- url_for(category.path) %>"
							class="hover:text-white transition-colors"
							><%= category.name %><%= index < page.categories.data.length - 1 ? ', ' : '' %></a
						>
						<% }); %>
					</span>
					<% } %>
				</div>
			</header>

			<!-- Featured Image -->
			<% if (page.featured_image) { %>
			<div class="mb-12">
				<img
					src="<%- url_for(page.featured_image) %>"
					alt="<%- page.title %>"
					class="w-full h-[500px] object-cover rounded-lg"
				/>
			</div>
			<% } %>

			<!-- Content -->
			<div class="prose prose-lg prose-invert max-w-none">
				<%- page.content %>
			</div>

			<!-- Tags -->
			<% if (page.tags && page.tags.data && page.tags.data.length > 0) { %>
			<div class="mt-12 pt-8 border-t border-primary-800">
				<h2 class="text-2xl font-display font-bold text-white mb-4">Tags</h2>
				<div class="flex flex-wrap gap-2">
					<% page.tags.data.forEach(function(tag) { %>
					<a
						href="<%- url_for(tag.path) %>"
						class="bg-primary-700 text-primary-200 text-sm px-3 py-1 rounded-full hover:bg-primary-600 transition-colors"
						><%= tag.name %></a
					>
					<% }); %>
				</div>
			</div>
			<% } %>
		</article>
	</div>
</main>

<%- partial('_partials/footer') %>
