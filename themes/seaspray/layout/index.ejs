<%- partial('_partials/head') %>

<div class="relative min-h-screen">
	<!-- Hero Section with Background Image -->
	<div class="absolute inset-0 z-0">
		<img
			src="/img/hero-pool.jpg"
			alt="Seaspray Pools"
			class="w-full h-full object-cover"
		/>
		<div class="absolute inset-0 bg-primary-900/70"></div>
	</div>

	<!-- Content Section -->
	<div class="relative z-10 min-h-screen flex flex-col">
		<!-- Hero Content -->
		<div class="flex-1 flex items-center">
			<div class="container mx-auto px-4 py-16">
				<div class="max-w-3xl">
					<h1
						class="text-5xl md:text-6xl font-display font-bold text-white mb-6"
					>
						Seaspray Pools
					</h1>
					<p class="text-xl md:text-2xl text-primary-200 mb-8">
						Creating beautiful, sustainable swimming pools for your home
					</p>
					<a
						href="/contact"
						class="inline-block px-8 py-4 bg-primary-500 hover:bg-primary-400 text-white rounded-lg transition-colors"
					>
						Get Started
					</a>
				</div>
			</div>
		</div>

		<!-- Posts Section -->
		<div class="bg-primary-900 py-16">
			<div class="container mx-auto px-4">
				<% if (page.posts && page.posts.length > 0) { %>
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
					<% page.posts.each(function(post) { %>
					<article class="bg-primary-800 rounded-lg overflow-hidden shadow-lg">
						<% if (post.thumbnail) { %>
						<img
							src="<%= post.thumbnail %>"
							alt="<%= post.title %>"
							class="w-full h-48 object-cover"
						/>
						<% } %>
						<div class="p-6">
							<h2 class="text-xl font-bold text-white mb-2">
								<a
									href="<%- url_for(post.path) %>"
									class="hover:text-primary-200 transition-colors"
								>
									<%= post.title %>
								</a>
							</h2>
							<div class="text-primary-300 text-sm mb-4">
								<time datetime="<%= date_xml(post.date) %>"
									><%= date(post.date) %></time
								>
							</div>
							<p class="text-primary-200 mb-4">
								<%= truncate(strip_html(post.excerpt), {length: 120}) %>
							</p>
							<a
								href="<%- url_for(post.path) %>"
								class="text-primary-400 hover:text-primary-300 transition-colors"
							>
								Discover More â†’
							</a>
						</div>
					</article>
					<% }); %>
				</div>
				<% } else { %>
				<div class="text-center py-16">
					<h2 class="text-2xl font-display font-bold text-white mb-4">
						Welcome to Seaspray Pools
					</h2>
					<p class="text-primary-200">
						No posts yet. Check back soon for updates!
					</p>
				</div>
				<% } %> <%- partial('_partials/pagination') %>
			</div>
		</div>
	</div>
</div>

<%- partial('_partials/footer') %>
