<% let heroImage = page.hero_image || page.featured_image || '/img/hero-pool-1.jpg' %>

<main class="bg-primary-900">
	<div class="pb-16 lg:pb-24 antialiased">
		<header class="relative h-[60vh]">
			<div class="absolute inset-0">
				<img
					src="<%= heroImage %>"
					alt="<%= typeof heroAlt !== 'undefined' && heroAlt ? heroAlt : 'Luxury Pool Design' %>"
					class="w-full h-full object-cover"
				/>
				<div class="absolute inset-0 bg-black bg-opacity-50"></div>

			</div>
			<div
				class="absolute top-20 left-1/2 px-4 mx-auto w-full max-w-screen-xl -translate-x-1/2 xl:top-1/2 xl:-translate-y-1/2 xl:px-0"
			>
				<div class="block mb-4 font-bold text-gray-300 portfolio-project-breadcrumb">
					Seaspray Pools
					<span class="font-normal text-white hover:underline">Melbourne</span>
				</div>
				<h1
					class="mb-4 max-w-4xl text-2xl font-extrabold leading-none text-white sm:text-3xl lg:text-4xl portfolio-project-title"
				>
					<%= page.title %>
				</h1>
				<p class="text-lg font-normal text-gray-300 portfolio-project-description"><%= page.description %></p>
			</div>
		</header>
		<div
			class="relative z-20 grid grid-cols-1 md:grid-cols-[1fr_200px] lg:grid-cols-[1fr_250px] xl:grid-cols-[1fr_336px] gap-8 p-6 -m-36 mx-4 max-w-screen-xl bg-primary-700 rounded xl:-m-32 xl:p-9 xl:mx-auto"
		>
			<article
				class="w-full max-w-none format format-sm sm:format-base lg:format-lg format-blue"
			>
			<% if (page.awards && page.awards.length > 0) { %>
				<div class="mb-12 mx-auto max-w-screen-sm portfolio-project-awards">
				<% page.awards.forEach(function(award) { %>
				
					<div id="alert-additional-content-1" class="p-4 mb-4 text-white border border-secondary-300 rounded-lg bg-secondary-400 portfolio-project-award-item" role="alert">
						<div class="flex items-center">
						  <svg class="shrink-0 w-8 h-8 me-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
							<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m7.171 12.906-2.153 6.411 2.672-.89 1.568 2.34 1.825-5.183m5.73-2.678 2.154 6.411-2.673-.89-1.568 2.34-1.825-5.183M9.165 4.3c.58.068 1.153-.17 1.515-.628a1.681 1.681 0 0 1 2.64 0 1.68 1.68 0 0 0 1.515.628 1.681 1.681 0 0 1 1.866 1.866c-.068.58.17 1.154.628 1.516a1.681 1.681 0 0 1 0 2.639 1.682 1.682 0 0 0-.628 1.515 1.681 1.681 0 0 1-1.866 1.866 1.681 1.681 0 0 0-1.516.628 1.681 1.681 0 0 1-2.639 0 1.681 1.681 0 0 0-1.515-.628 1.681 1.681 0 0 1-1.867-1.866 1.681 1.681 0 0 0-.627-1.515 1.681 1.681 0 0 1 0-2.64c.458-.361.696-.935.627-1.515A1.681 1.681 0 0 1 9.165 4.3ZM14 9a2 2 0 1 1-4 0 2 2 0 0 1 4 0Z"/>
						  </svg>
						  <span class="sr-only">Info</span>
						  <div>
							<h3 class="text-lg font-medium"><%= award.name %></h3>
							<% if (award.description) { %>	
								<div class="mb-1 text-sm">
								<%= award.description %>
								</div>
							<% } %>
						</div>
						</div>
					  </div>
				<% }); %>
				</div>
			<% } %>
			<div class="prose lg:prose-lg mx-auto portfolio-project-content">
				<%- page.content %>
			</div>
			</article>
			<aside class="xl:block " aria-labelledby="sidebar-label">
				<div class="md:w-[200px] lg:w-[250px] xl:w-[336px] xl:sticky xl:top-6 portfolio-project-sidebar">
					<!-- Project Details -->
					<div class="mb-12 portfolio-project-details">
						<h4 class="mb-4 text-md font-bold text-white uppercase">
							Project Details
						</h4>
						<div>
							<dl class="space-y-4">
								<div>
									<dt class="text-primary-300">Pool Type</dt>
									<dd class="text-white">
										<%= page.project_details.pool_type %>
									</dd>
								</div>
								<div>
									<dt class="text-primary-300">Size</dt>
									<dd class="text-white"><%= page.project_details.size %></dd>
								</div>
								<div>
									<dt class="text-primary-300">Location</dt>
									<dd class="text-white">
										<%= page.project_details.location %>
									</dd>
								</div>
							</dl>
						</div>
					</div>
					<!-- Project Details -->

					<!-- Project Features -->
					<div class="mb-12 portfolio-project-features">
						<div>
							<h4 class="mb-4 text-md font-bold text-white uppercase">
								Features
							</h4>
							<ul class="space-y-2 portfolio-project-features-list">
								<% page.project_details.features.forEach(function(feature) { %>
								<li class="flex items-center text-white portfolio-project-feature-item">
									<svg
										class="w-5 h-5 text-primary-400 mr-2"
										fill="none"
										stroke="currentColor"
										viewBox="0 0 24 24"
									>
										<path
											stroke-linecap="round"
											stroke-linejoin="round"
											stroke-width="2"
											d="M5 13l4 4L19 7"
										></path>
									</svg>
									<%= feature %>
								</li>
								<% }); %>
							</ul>
						</div>
					</div>
					<!-- Project Features -->
				
					<div class="mb-12">
						<a
							href="/portfolio/"
							class="flex justify-center items-center mb-3 w-full h-48 bg-gray-100 rounded-lg overflow-hidden"
						>
							<img
								src="/img/hero-pool-3.jpg"
								alt="Seaspray Pools Melbourne Project"
								class="w-full h-full object-cover"
							/>
						</a>
						<p class="mb-2 text-sm text-gray-500">
							View our recent projects, and see how we've helped our clients
							create their dream pools.
						</p>
						<a href="/portfolio/" class="text-xs text-gray-400 uppercase">View all projects</a>
					</div>

					<h3 id="sidebar-label" class="sr-only">Sidebar</h3>
					<div class="mb-12">
						<h4 class="mb-2 text-sm font-bold text-gray-200 uppercase">
							Seapray Pools Melbourne
						</h4>
						<p class="mb-4 text-sm text-gray-300">
							We are a family-run business for over 30 years, we know a thing
							(or three) about pool building for Melbourne's unique climate.
						</p>
						<a
							href="/contact"
							type="button"
							class="block text-white bg-secondary-400 hover:bg-secondary-600 focus:ring-4 focus:ring-secondary-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 focus:outline-none text-center w-full"
							>Get a quote</a
						>
					</div>
				</div>
			</aside>
		</div>
	</div>

	<!-- Gallery -->
	<% if (page.gallery && page.gallery.length > 0) { %>
	<div class="mt-32 lg:mt-16 mb-12 mx-8 bg-primary-900">
		<div class="grid grid-cols-1 md:grid-cols-2 gap-8 portfolio-project-gallery">
			<% page.gallery.forEach(function(image) { %>
			<div class="relative aspect-[4/3] rounded-lg overflow-hidden portfolio-project-gallery-item">
				<img
					src="<%- url_for(page.slug + '/' + image) %>"
					alt="<%= page.title %>"
					class="w-full h-full object-cover"
				/>

			</div>
			<% }); %>
		</div>
	</div>
	<% } %>
	<!-- Gallery -->
</main> 