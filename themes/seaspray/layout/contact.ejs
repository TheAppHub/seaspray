<% const designCenter = site.data['design-centre'] %>

<!-- prettier-ignore -->
<%- partial('_partials/page-hero', { title: page.title, description: page.description, heroImage: page.image, heroAlt: page.title }) %>

<!-- Contact Section -->
<section class="py-16 bg-primary-900">
	<div class="container mx-auto px-4">
		<div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
			<!-- Contact Form -->
			<div class="bg-primary-800 p-8 rounded-lg">
				<h2 class="text-3xl font-bold text-white mb-6">
					<%= page.formTitle %>
				</h2>
				<p class="text-primary-200 mb-8"><%= page.formIntro %></p>

				<form id="contactForm" class="space-y-6">
					<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
						<div>
							<label
								for="firstName"
								class="block text-sm font-medium text-primary-200 mb-2"
								>First Name</label
							>
							<input
								type="text"
								id="firstName"
								name="firstName"
								required
								class="w-full px-4 py-2 bg-primary-700 border border-primary-600 rounded-lg text-white focus:ring-2 focus:ring-primary-500 focus:border-transparent"
							/>
						</div>
						<div>
							<label
								for="lastName"
								class="block text-sm font-medium text-primary-200 mb-2"
								>Last Name</label
							>
							<input
								type="text"
								id="lastName"
								name="lastName"
								required
								class="w-full px-4 py-2 bg-primary-700 border border-primary-600 rounded-lg text-white focus:ring-2 focus:ring-primary-500 focus:border-transparent"
							/>
						</div>
					</div>
					<div>
						<label
							for="phone"
							class="block text-sm font-medium text-primary-200 mb-2"
							>Phone</label
						>
						<input
							type="tel"
							id="phone"
							name="phone"
							required
							class="w-full px-4 py-2 bg-primary-700 border border-primary-600 rounded-lg text-white focus:ring-2 focus:ring-primary-500 focus:border-transparent"
						/>
					</div>
					<div>
						<label
							for="email"
							class="block text-sm font-medium text-primary-200 mb-2"
							>Email</label
						>
						<input
							type="email"
							id="email"
							name="email"
							required
							class="w-full px-4 py-2 bg-primary-700 border border-primary-600 rounded-lg text-white focus:ring-2 focus:ring-primary-500 focus:border-transparent"
						/>
					</div>
					<div>
						<label
							for="suburb"
							class="block text-sm font-medium text-primary-200 mb-2"
							>Suburb</label
						>
						<input
							type="text"
							id="suburb"
							name="suburb"
							required
							class="w-full px-4 py-2 bg-primary-700 border border-primary-600 rounded-lg text-white focus:ring-2 focus:ring-primary-500 focus:border-transparent"
						/>
					</div>
					<div>
						<label
							for="homeType"
							class="block text-sm font-medium text-primary-200 mb-2"
							>Home Type</label
						>
						<select
							id="homeType"
							name="homeType"
							required
							class="w-full px-4 py-2 bg-primary-700 border border-primary-600 rounded-lg text-white focus:ring-2 focus:ring-primary-500 focus:border-transparent"
						>
							<option value="">Please select...</option>
							<option value="new">New Home</option>
							<option value="existing">Existing Home</option>
						</select>
					</div>
					<div class="flex items-center">
						<input
							type="checkbox"
							id="plansAvailable"
							name="plansAvailable"
							class="w-4 h-4 text-secondary-500 bg-primary-700 border-primary-600 rounded focus:ring-secondary-500 focus:ring-2"
						/>
						<label
							for="plansAvailable"
							class="ml-2 text-sm font-medium text-primary-200"
							>House and/or landscaping plans are available</label
						>
					</div>
					<div>
						<label
							for="enquiry"
							class="block text-sm font-medium text-primary-200 mb-2"
							>Enquiry</label
						>
						<textarea
							id="enquiry"
							name="enquiry"
							rows="4"
							required
							class="w-full px-4 py-2 bg-primary-700 border border-primary-600 rounded-lg text-white focus:ring-2 focus:ring-primary-500 focus:border-transparent"
						></textarea>
					</div>
					<button
						type="submit"
						class="w-full bg-secondary-500 hover:bg-secondary-600 text-white font-bold py-3 px-6 rounded-lg transition duration-300"
					>
						Submit Request
					</button>
					<div id="formStatus" class="hidden mt-4 p-4 rounded-lg"></div>
				</form>
			</div>

			<!-- Contact Info & Map -->
			<div class="space-y-8">
				<div class="bg-primary-800 p-8 rounded-lg">
					<h2 class="text-3xl font-bold text-white mb-6">
						Visit Our Pool and Display Centre
					</h2>
					<div class="space-y-4 text-primary-200">
						<p>
							<%= config.address.street %><br />
							<%= config.address.city %>, <%= config.address.state %> <%=
							config.address.zip %><br />
							<%= config.address.country %>
						</p>
						<p class="text-2xl font-bold text-white"><%= config.phone %></p>
						<p>
							Please fill in the form and a business representative will get
							back to you, or simply email us at:
						</p>
						<a
							href="mailto:< %= config.email %>"
							class="text-primary-300 hover:text-primary-200"
							><%= config.email %></a
						>
						<p>
                            <%- designCenter.contact_section.hours.split('\n').join('<br />') %>
                        </p>
					</div>
				</div>

				<!-- Map -->
				<div class="h-[400px] rounded-lg overflow-hidden">
					<iframe 
						src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3149.082769181759!2d145.275844!3d-37.881747!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6ad63cf35ed95431%3A0xbfdaf3fa3363247a!2sSeaspray%20Pools!5e0!3m2!1sen!2sau!4v1755833883015!5m2!1sen!2sau" 
						width="100%" 
						height="100%" 
						style="border:0;" 
						allowfullscreen="" 
						loading="lazy" 
						referrerpolicy="no-referrer-when-downgrade"
						title="Seaspray Pools Location"
						class="w-full h-full"
					>
					</iframe>
				</div>
			</div>
		</div>
	</div>
</section>

<script>
	document
		.getElementById("contactForm")
		.addEventListener("submit", async (e) => {
			e.preventDefault();
			const form = e.target;
			const statusDiv = document.getElementById("formStatus");
			const submitButton = form.querySelector('button[type="submit"]');

			try {
				submitButton.disabled = true;
				submitButton.textContent = "Sending...";

				const formData = new FormData(form);
				const response = await fetch("https://bojzue7ag6.execute-api.ap-southeast-2.amazonaws.com/contact", {
					method: "POST",
					body: JSON.stringify(Object.fromEntries(formData)),
					headers: {
						"Content-Type": "application/json",
					},
				});

				if (response.ok) {
					statusDiv.className = "mt-4 p-4 rounded-lg bg-green-500 text-white";
					statusDiv.textContent =
						"Thank you for your enquiry. We will get back to you soon.";
					form.reset();
				} else {
					throw new Error("Form submission failed");
				}
			} catch (error) {
				statusDiv.className = "mt-4 p-4 rounded-lg bg-red-500 text-white";
				statusDiv.textContent =
					"Sorry, there was an error submitting your form. Please try again.";
			} finally {
				submitButton.disabled = false;
				submitButton.textContent = "Submit Request";
				statusDiv.classList.remove("hidden");
			}
		});
</script>
