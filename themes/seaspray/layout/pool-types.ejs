<!-- prettier-ignore -->
<%- partial('_partials/page-hero', { title: page.title, description: page.description, heroImage: '/img/hero-pool-2.jpg', heroAlt: 'Luxury Pool Types' }) %>

<section class="py-16">
    <div class="container mx-auto px-4">
        <div class="prose prose-lg max-w-none"><%- page.content %></div>
    </div>
</section>

<% if (page.features && page.features.length > 0) { %>
<section class="bg-gray-50 py-16">
    <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% page.features.forEach(function(feature) { %>
            <div class="bg-white p-8 rounded-lg shadow-md">
                <h3 class="text-xl font-bold mb-4"><%= feature.title %></h3>
                <p class="text-gray-600"><%= feature.content %></p>
            </div>
            <% }); %>
        </div>
    </div>
</section>
<% } %>

<section class="bg-blue-900 text-white py-16">
    <div class="container mx-auto px-4 text-center">
        <h2 class="text-3xl font-bold mb-6">Ready to transform your backyard?</h2>
        <p class="text-xl mb-8">
            Contact us today for a free consultation and quote.
        </p>
        <a
            href="/contact"
            class="inline-block bg-white text-blue-900 px-8 py-3 rounded-lg font-bold hover:bg-blue-50 transition-colors"
            >Get Started</a
        >
    </div>
</section> 