<!-- Featured Projects Section -->
<section class="py-16 bg-gray-50">
	<div class="container mx-auto px-4">
		<div class="text-center mb-12">
			<h2 class="text-3xl font-bold text-gray-900 mb-4">Featured Projects</h2>
			<p class="text-lg text-gray-600">
				Explore our award-winning pool designs and transformations
			</p>
		</div>

		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
			<% var projects = site.data.featured_projects.projects; var posts =
			site.posts.filter(function(post) { return post.categories &&
			post.categories.includes('portfolio'); }); projects.sort(function(a, b) {
			return a.order - b.order; }).forEach(function(project) { var post =
			posts.find(function(p) { return p.path && p.path.includes(project.id); });
			if (post) { %>
			<div
				class="bg-white rounded-lg shadow-lg overflow-hidden transform transition duration-300 hover:scale-105"
			>
				<a href="<%- url_for(post.path) %>" class="block">
					<div class="relative">
						<img
							src="<%- url_for(post.featured_image) %>"
							alt="<%- post.title %>"
							class="w-full h-64 object-cover"
						/>
						<div
							class="absolute inset-0 bg-black bg-opacity-20 transition-opacity duration-300 hover:bg-opacity-30"
						></div>
					</div>
					<div class="p-6">
						<h3 class="text-xl font-semibold text-gray-900 mb-2">
							<%- post.title %>
						</h3>
						<p class="text-gray-600 mb-4">
							<%- post.excerpt || post.description %>
						</p>
						<div class="flex flex-wrap gap-2">
							<% if (post.tags) { %> <% post.tags.forEach(function(tag) { %>
							<span
								class="px-3 py-1 bg-blue-100 text-blue-800 text-sm rounded-full"
							>
								<%- tag %>
							</span>
							<% }); %> <% } %>
						</div>
					</div>
				</a>
			</div>
			<% } %> <% }); %>
		</div>

		<div class="text-center mt-12">
			<a
				href="<%- url_for('/portfolio/') %>"
				class="inline-block bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition duration-300"
			>
				View All Projects
			</a>
		</div>
	</div>
</section>
