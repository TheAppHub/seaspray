<%- partial('_partials/page-hero', { title: site.data.portfolio.title, description: site.data.portfolio.description, heroImage: site.data.portfolio.hero_image, heroAlt: site.data.portfolio.title }) %>

<section class="bg-primary-700">
    <div class="py-8 px-4 mx-auto max-w-screen-xl sm:py-16 lg:px-6">
        <%- partial('_partials/portfolio-tags-filter') %>
        
        <% 
        const portfolioPosts = site.posts.filter(post => post.source.startsWith('_posts/portfolio/'));
        %>
        <%- partial('_partials/portfolio-grid', { posts: portfolioPosts }) %>
    </div>
</section>