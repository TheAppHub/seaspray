<% if (page.total > 1){ %>
<nav class="flex justify-center mt-12" aria-label="Pagination">
	<ul class="inline-flex items-center -space-x-px">
		<% if (page.prev) { %>
		<li>
			<a
				href="<%- url_for(page.prev_link) %>"
				class="block px-4 py-2 ml-0 leading-tight text-primary-600 bg-white border border-primary-300 rounded-l-lg hover:bg-primary-50 hover:text-primary-700 transition-colors"
			>
				<span class="sr-only">Previous</span>
				<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
					<path
						fill-rule="evenodd"
						d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z"
						clip-rule="evenodd"
					></path>
				</svg>
			</a>
		</li>
		<% } %> <% for (let i = 0; i < page.total; i++) { %>
		<li>
			<a
				href="<%- url_for(i === 0 ? config.index_generator.path : config.pagination_dir + '/' + (i + 1)) %>"
				class="px-4 py-2 leading-tight <%= page.current === i + 1 ? 'text-white bg-primary-700 border border-primary-700 hover:bg-primary-800' : 'text-primary-600 bg-white border border-primary-300 hover:bg-primary-50 hover:text-primary-700' %> transition-colors"
			>
				<%= i + 1 %>
			</a>
		</li>
		<% } %> <% if (page.next) { %>
		<li>
			<a
				href="<%- url_for(page.next_link) %>"
				class="block px-4 py-2 leading-tight text-primary-600 bg-white border border-primary-300 rounded-r-lg hover:bg-primary-50 hover:text-primary-700 transition-colors"
			>
				<span class="sr-only">Next</span>
				<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
					<path
						fill-rule="evenodd"
						d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
						clip-rule="evenodd"
					></path>
				</svg>
			</a>
		</li>
		<% } %>
	</ul>
</nav>
<% } %>
