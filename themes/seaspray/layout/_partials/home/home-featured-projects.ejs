<% const projects = site.data['featured-projects'] %>

<section class="bg-primary-900 py-16">
	<div class="container mx-auto px-4">
		<div class="mx-auto max-w-screen-sm text-center mb-12">
			<h2 class="text-4xl font-display font-bold text-white mb-4">
				<%= projects.title %>
			</h2>
			<p class="text-xl text-primary-200"><%= projects.subtitle %></p>
		</div>
		<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
			<% projects.projects.forEach(project => { %>
			<div class="bg-primary-800 rounded-lg overflow-hidden shadow-lg">
				<a href="<%= project.link %>">
					<img
						class="w-full h-48 object-cover"
						src="<%= project.image %>"
						alt="<%= project.title %>"
					/>
				</a>
				<div class="p-6">
					<a href="<%= project.link %>">
						<h3
							class="text-xl font-bold text-white mb-2 hover:text-primary-200 transition-colors"
						>
							<%= project.title %>
						</h3>
					</a>
					<p class="text-primary-200 mb-4"><%= project.description %></p>
					<div class="flex flex-wrap gap-2 mb-4">
						<% if (project.tags) { project.tags.forEach(function(tag) { %>
						<span
							class="bg-primary-700 text-primary-200 text-sm px-3 py-1 rounded-full"
							><%= tag %></span
						>
						<% }); } %>
					</div>
					<a
						href="<%= project.link %>"
						class="inline-flex items-center text-primary-400 hover:text-primary-300 transition-colors"
					>
						View Project
						<svg
							class="w-4 h-4 ml-2"
							aria-hidden="true"
							xmlns="http://www.w3.org/2000/svg"
							fill="none"
							viewBox="0 0 14 10"
						>
							<path
								stroke="currentColor"
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M1 5h12m0 0L9 1m4 4L9 9"
							/>
						</svg>
					</a>
				</div>
			</div>
			<% }) %>
		</div>
	</div>
</section>
