<% const features = site.data.features %>

<!-- Features Grid -->
<section class="py-16 bg-transparent backdrop-blur-md">
	<div class="container mx-auto px-4">
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
			<% features.features.forEach(function(feature) { %>
			<div class="text-center">
				<div
					class="w-16 h-16 mx-auto mb-4 bg-primary-800 rounded-full flex items-center justify-center"
				>
					<svg
						class="w-8 h-8 text-secondary-400"
						fill="none"
						stroke="currentColor"
						viewBox="0 0 24 24"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M5 13l4 4L19 7"
						/>
					</svg>
				</div>
				<h4 class="text-xl font-semibold text-white mb-2">
					<%- feature.title %>
				</h4>
				<p class="text-primary-200"><%- feature.description %></p>
			</div>
			<% }); %>
		</div>
	</div>
</section> 