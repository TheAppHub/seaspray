<% const intro = site.data.intro %>

<!-- Intro Section -->
<section class="py-16" id="home-intro">
	<div class="container mx-auto px-4">
		<div class="max-w-3xl mx-auto text-center">
			<h2 class="text-4xl font-bold text-white mb-4"><%- intro.title %></h2>
			<h3 class="text-2xl font-semibold text-primary-200 mb-6">
				<%- intro.subtitle %>
			</h3>
			<div class="text-primary-200 mb-12">
				<%- intro.content.split('\n\n')[0] %>
			</div>
		</div>
	</div>
</section>
