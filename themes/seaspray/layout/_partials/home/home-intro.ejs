<% const intro = site.data.intro %>

<!-- Intro Section -->
<section class="py-16">
	<div class="container mx-auto px-4">
		<div class="max-w-3xl mx-auto text-center">
			<h2 class="text-4xl font-display font-bold text-white mb-4">
				<%- intro.title %>
			</h2>
			<h3 class="text-2xl font-display font-semibold text-primary-200 mb-6">
				<%- intro.subtitle %>
			</h3>
			<div class="text-primary-200 mb-12">
				<%- intro.content.split('\n\n')[0] %>
			</div>
		</div>
	</div>
</section>

<!-- Features Section -->
<section class="py-16">
	<div class="container mx-auto px-4">
		<div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
			<div class="space-y-8">
				<h3 class="text-2xl font-display font-semibold text-white mb-6">
					Why Choose Seaspray Pools?
				</h3>
				<div class="prose prose-lg prose-invert">
					<p class="text-primary-200 mb-6">We pride ourselves on:</p>
					<ul class="space-y-4 text-primary-200 list-none">
						<li class="flex items-start">
							<svg
								class="w-5 h-5 text-primary-400 mt-1 mr-3 flex-shrink-0"
								fill="none"
								stroke="currentColor"
								viewBox="0 0 24 24"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M5 13l4 4L19 7"
								/>
							</svg>
							<span>Custom designs tailored to your space and style</span>
						</li>
						<li class="flex items-start">
							<svg
								class="w-5 h-5 text-primary-400 mt-1 mr-3 flex-shrink-0"
								fill="none"
								stroke="currentColor"
								viewBox="0 0 24 24"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M5 13l4 4L19 7"
								/>
							</svg>
							<span>Sustainable construction practices</span>
						</li>
						<li class="flex items-start">
							<svg
								class="w-5 h-5 text-primary-400 mt-1 mr-3 flex-shrink-0"
								fill="none"
								stroke="currentColor"
								viewBox="0 0 24 24"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M5 13l4 4L19 7"
								/>
							</svg>
							<span>Premium materials and finishes</span>
						</li>
						<li class="flex items-start">
							<svg
								class="w-5 h-5 text-primary-400 mt-1 mr-3 flex-shrink-0"
								fill="none"
								stroke="currentColor"
								viewBox="0 0 24 24"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M5 13l4 4L19 7"
								/>
							</svg>
							<span>Comprehensive maintenance services</span>
						</li>
						<li class="flex items-start">
							<svg
								class="w-5 h-5 text-primary-400 mt-1 mr-3 flex-shrink-0"
								fill="none"
								stroke="currentColor"
								viewBox="0 0 24 24"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M5 13l4 4L19 7"
								/>
							</svg>
							<span>Unmatched customer satisfaction</span>
						</li>
					</ul>
					<p class="text-primary-200 mt-8">
						Whether you're dreaming of a modern infinity pool, a natural lagoon,
						or a family-friendly oasis, we're here to make it a reality.
					</p>
				</div>
			</div>
			<div class="relative h-[500px] rounded-lg overflow-hidden shadow-xl">
				<img
					src="/img/hero-pool-2.jpg"
					alt="Luxury Pool Design"
					class="w-full h-full object-cover"
				/>
			</div>
		</div>
	</div>
</section>

<!-- Features Grid -->
<section class="py-16 bg-transparent backdrop-blur-md">
	<div class="container mx-auto px-4">
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
			<% intro.features.forEach(function(feature) { %>
			<div class="text-center">
				<div
					class="w-16 h-16 mx-auto mb-4 bg-primary-800 rounded-full flex items-center justify-center"
				>
					<svg
						class="w-8 h-8 text-primary-400"
						fill="none"
						stroke="currentColor"
						viewBox="0 0 24 24"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M5 13l4 4L19 7"
						/>
					</svg>
				</div>
				<h4 class="text-xl font-display font-semibold text-white mb-2">
					<%- feature.title %>
				</h4>
				<p class="text-primary-200"><%- feature.description %></p>
			</div>
			<% }); %>
		</div>
	</div>
</section>
