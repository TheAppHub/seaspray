<% const whySeaspray = site.data.why_seaspray || {} %>

<!-- Why choose Seaspray Pools? -->
<section class="bg-primary-800 overflow-x-hidden">
	<div class="grid grid-cols-1 md:grid-cols-2">
		<div class="py-16 px-4 md:pl-4 md:pr-0">
			<div class="max-w-3xl mx-auto home-why-seaspray">
				<h3 class="text-2xl font-semibold text-white mb-6 home-why-title">
					<%- whySeaspray.title || 'Why Choose Seaspray Pools?' %>
				</h3>
				<div class="prose prose-lg prose-invert home-why-content">
					<p class="text-primary-200 mb-6"><%- whySeaspray.subtitle || '' %></p>
					<ul class="space-y-4 text-primary-200 list-none">
						<% if (whySeaspray['dot-points'] && Array.isArray(whySeaspray['dot-points'])) { %>
							<% whySeaspray['dot-points'].forEach(function(point) { %>
								<li class="flex items-start">
									<svg
										class="w-5 h-5 text-primary-400 mt-1 mr-3 flex-shrink-0"
										fill="none"
										stroke="currentColor"
										viewBox="0 0 24 24"
									>
										<path
											stroke-linecap="round"
											stroke-linejoin="round"
											stroke-width="2"
											d="M5 13l4 4L19 7"
										/>
									</svg>
									<span><%- point %></span>
								</li>
							<% }); %>
						<% } %>
					</ul>
					<p class="text-primary-200 mt-8">
						<%- whySeaspray['cta-title'] || '' %>
					</p>
					<div class="not-prose">
						<a
							href="<%- whySeaspray['cta-button']?.link || '/contact' %>"
							class="inline-block px-6 py-3 bg-secondary-400 hover:bg-secondary-500 !text-white rounded-lg font-medium"
						>
							<%- whySeaspray['cta-button']?.text || 'Contact us' %>
						</a>
					</div>
				</div>
			</div>
		</div>
		<div class="relative h-full home-why-image">
			<img
				src="/img/hero-pool-2.jpg"
				alt="Luxury Pool Design"
				class="absolute inset-0 w-full h-full object-cover"
				loading="lazy"
			/>
		</div>
	</div>
</section>

<%- partial('_partials/home/home-features') %>
