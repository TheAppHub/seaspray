<%- partial('_partials/header') %>

<main class="py-16">
	<div class="container mx-auto px-4">
		<!-- Hero Section with Background Image -->
		<% if (page.featured_image) { %>
		<div
			class="relative w-full h-[400px] md:h-[500px] rounded-lg shadow-xl mb-16 overflow-hidden flex items-center justify-center"
			style="
				background-image: url('<%- url_for(page.featured_image) %>');
				background-size: cover;
				background-position: center;
			"
		>
			<div class="absolute inset-0 bg-black bg-opacity-50"></div>
			<div class="relative z-10 text-center px-4">
				<h1
					class="text-4xl md:text-5xl font-display font-bold text-white mb-6 drop-shadow-lg"
				>
					<%- page.title %>
				</h1>
				<div
					class="prose prose-lg prose-invert mx-auto text-primary-100 drop-shadow"
				>
					<%- page.description %>
				</div>
			</div>
		</div>
		<% } %>

		<!-- Main Content -->
		<div class="max-w-4xl mx-auto">
			<div class="prose prose-lg prose-invert max-w-none">
				<%- page.content %>
			</div>

			<!-- Features Section -->
			<% if (page.features && page.features.length > 0) { %>
			<div class="mt-16">
				<h2 class="text-3xl font-display font-bold text-white mb-8">
					<%= page.features_title || 'Key Features' %>
				</h2>
				<div class="grid md:grid-cols-2 gap-8">
					<% page.features.forEach(function(feature) { %>
					<div class="bg-primary-800 rounded-lg p-6">
						<h3 class="text-xl font-display font-bold text-white mb-4">
							<%= feature.title %>
						</h3>
						<div class="prose prose-invert"><%- feature.content %></div>
					</div>
					<% }); %>
				</div>
			</div>
			<% } %>

			<!-- CTA Section -->
			<div class="mt-16 text-center">
				<h2 class="text-3xl font-display font-bold text-white mb-6">
					<%= page.cta_title || 'Ready to Start Your Project?' %>
				</h2>
				<p class="text-xl text-primary-200 mb-8">
					<%= page.cta_text || 'Contact us today to discuss your dream pool.' %>
				</p>
				<a
					href="/contact"
					class="inline-flex items-center px-8 py-3 bg-primary-600 hover:bg-primary-500 text-white rounded-lg transition-colors"
				>
					Get a Free Quote
					<svg
						class="w-4 h-4 ml-2"
						aria-hidden="true"
						xmlns="http://www.w3.org/2000/svg"
						fill="none"
						viewBox="0 0 14 10"
					>
						<path
							stroke="currentColor"
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M1 5h12m0 0L9 1m4 4L9 9"
						/>
					</svg>
				</a>
			</div>
		</div>
	</div>
</main>
