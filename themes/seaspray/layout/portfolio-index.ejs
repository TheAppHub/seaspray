<%- partial('_partials/header') %>

<main class="bg-primary-900 min-h-screen">
	<div class="container mx-auto px-4 py-16">
		<!-- Header -->
		<div class="max-w-4xl mx-auto text-center mb-16">
			<h1 class="text-4xl md:text-5xl font-display font-bold text-white mb-6">
				<%= page.title %>
			</h1>
			<div class="prose prose-lg prose-invert mx-auto"><%- page.content %></div>
		</div>

		<!-- Projects Grid -->
		<div class="max-w-7xl mx-auto">
			<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
				<% site.posts.filter(post =>
				post.categories.includes('portfolio')).each(function(project) { %>
				<article
					class="bg-primary-800 rounded-lg overflow-hidden shadow-xl transition-transform duration-300 hover:scale-105"
				>
					<a href="<%- url_for(project.path) %>" class="block">
						<img
							src="<%= project.featured_image %>"
							alt="<%= project.title %>"
							class="w-full h-64 object-cover"
						/>
						<div class="p-6">
							<h2 class="text-2xl font-display font-bold text-white mb-2">
								<%= project.title %>
							</h2>
							<div class="flex items-center space-x-4 text-primary-300 mb-4">
								<span><%= project.project_details.location %></span>
								<span>â€¢</span>
								<span><%= project.project_details.pool_type %></span>
							</div>
							<p class="text-primary-200 line-clamp-3">
								<%= project.excerpt %>
							</p>
						</div>
					</a>
				</article>
				<% }); %>
			</div>
		</div>
	</div>
</main>

<%- partial('_partials/footer') %>
