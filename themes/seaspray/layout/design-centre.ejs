<% const designCenter = site.data['design-centre'] %>

<!-- Hero Section with Full Screen Video -->
<div class="relative min-h-screen">
    <!-- Video Background -->
    <div class="absolute inset-0 z-0">
        <video 
            class="w-full h-full object-cover"
            autoplay 
            muted 
            loop 
            playsinline
            poster="<%- designCenter.video_poster %>"
        >
            <source src="<%- designCenter.video_url %>" type="video/mp4">
            <!-- Fallback background image -->
            <img 
                src="<%- designCenter.video_poster %>" 
                alt="Design Center Hero"
                class="w-full h-full object-cover"
            />
        </video>
        <div class="absolute inset-0 bg-gradient-to-r from-black/70 via-black/50 to-transparent md:from-black/65 md:via-black/50 md:to-transparent"></div>
    </div>

    <!-- Content Section -->
    <div class="relative z-10 min-h-screen flex flex-col">
        <!-- Hero Content -->
        <div class="flex-1 flex items-center">
            <div class="container mx-auto px-4 py-16">
                <div class="max-w-3xl">
                    <h1 class="text-5xl md:text-6xl font-display font-bold text-white mb-6">
                        <%- designCenter.title %>
                    </h1>
                    <p class="text-xl md:text-2xl text-primary-200 mb-8">
                        <%- designCenter.subtitle %>
                    </p>
                    <a href="#design-content" class="inline-block px-8 py-4 bg-primary-500 hover:bg-primary-400 text-white rounded-lg transition-colors">
                        Explore Our Centre
                    </a>
                </div>
            </div>
        </div>

        <!-- Scroll Indicator -->
        <div class="absolute bottom-8 left-1/2 -translate-x-1/2">
            <a href="#design-content">
                <div class="scroll-indicator"></div>
            </a>
        </div>
    </div>
</div>

<!-- Intro Section -->
<section class="py-16 bg-primary-900" id="design-content">
    <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto text-center design-center-intro">
            <h2 class="text-4xl font-bold text-white mb-4 design-center-intro-title"><%- designCenter.intro.title %></h2>
            <h3 class="text-2xl font-normal text-primary-200 mb-6 design-center-intro-subtitle">
                <%- designCenter.intro.subtitle %>
            </h3>
            <div class="text-primary-200 design-center-intro-content">
                <%- designCenter.intro.content %>
            </div>
        </div>
    </div>
</section>

<!-- Content Section with Text and Image -->
<section class="py-16 bg-primary-800">
    <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            <!-- Text Content -->
            <div class="design-center-content">
                <h2 class="text-3xl font-bold text-white mb-6 design-center-content-title">
                    <%- designCenter.content_section.title %>
                </h2>
                <div class="text-primary-200 space-y-4 design-center-content-text">
                    <%- designCenter.content_section.text %>
                </div>
            </div>
            
            <!-- Image -->
            <div class="order-first lg:order-last design-center-image">
                <img 
                    src="<%- designCenter.content_section.image %>" 
                    alt="<%- designCenter.content_section.image_alt %>"
                    class="w-full h-auto rounded-lg shadow-lg"
                />
            </div>
        </div>
    </div>
</section>

<!-- Contact Section with Form -->
<section class="py-16 bg-primary-900">
    <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
            <!-- Contact Info -->
            <div class="space-y-8 design-center-contact">
                <div class="bg-primary-800 p-8 rounded-lg">
                    <h2 class="text-3xl font-bold text-white mb-6 design-center-contact-title">
                        <%- designCenter.contact_section.title %>
                    </h2>
                    <div class="space-y-4 text-primary-200 design-center-contact-info">
                        <p>
                            <%- designCenter.contact_section.address.street %><br />
                            <%- designCenter.contact_section.address.city %>, <%- designCenter.contact_section.address.state %> <%- designCenter.contact_section.address.zip %><br />
                            <%- designCenter.contact_section.address.country %>
                        </p>
                        <p class="text-2xl font-bold text-white"><%- designCenter.contact_section.phone %></p>
                        <p>
                            <%- designCenter.contact_section.hours.split('\n').join('<br />') %>
                        </p>
                        <p>
                            Email us at:
                        </p>
                        <a href="mailto:<%- designCenter.contact_section.email %>" class="text-primary-300 hover:text-primary-200">
                            <%- designCenter.contact_section.email %>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Booking Form -->
            <div class="bg-primary-800 p-8 rounded-lg design-center-form">
                <h2 class="text-3xl font-bold text-white mb-6 design-center-form-title">
                    Request a Consultation
                </h2>
                <p class="text-primary-200 mb-8 design-center-form-subtitle">
                    <%- designCenter.contact_section.subtitle %>
                </p>

                <form id="designCenterForm" class="space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label for="firstName" class="block text-sm font-medium text-primary-200 mb-2">First Name</label>
                            <input
                                type="text"
                                id="firstName"
                                name="firstName"
                                required
                                class="w-full px-4 py-2 bg-primary-700 border border-primary-600 rounded-lg text-white focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                            />
                        </div>
                        <div>
                            <label for="lastName" class="block text-sm font-medium text-primary-200 mb-2">Last Name</label>
                            <input
                                type="text"
                                id="lastName"
                                name="lastName"
                                required
                                class="w-full px-4 py-2 bg-primary-700 border border-primary-600 rounded-lg text-white focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                            />
                        </div>
                    </div>
                    <div>
                        <label for="phone" class="block text-sm font-medium text-primary-200 mb-2">Phone</label>
                        <input
                            type="tel"
                            id="phone"
                            name="phone"
                            required
                            class="w-full px-4 py-2 bg-primary-700 border border-primary-600 rounded-lg text-white focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                        />
                    </div>
                    <div>
                        <label for="email" class="block text-sm font-medium text-primary-200 mb-2">Email</label>
                        <input
                            type="email"
                            id="email"
                            name="email"
                            required
                            class="w-full px-4 py-2 bg-primary-700 border border-primary-600 rounded-lg text-white focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                        />
                    </div>
                    <div>
                        <label for="preferredDate" class="block text-sm font-medium text-primary-200 mb-2">Preferred Visit Date</label>
                        <input
                            type="date"
                            id="preferredDate"
                            name="preferredDate"
                            required
                            class="w-full px-4 py-2 bg-primary-700 border border-primary-600 rounded-lg text-white focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                        />
                    </div>
                    <div>
                        <label for="preferredTime" class="block text-sm font-medium text-primary-200 mb-2">Preferred Time</label>
                        <select
                            id="preferredTime"
                            name="preferredTime"
                            required
                            class="w-full px-4 py-2 bg-primary-700 border border-primary-600 rounded-lg text-white focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                        >
                            <option value="">Please select...</option>
                            <option value="morning">Morning (9:00 AM - 12:00 PM)</option>
                            <option value="afternoon">Afternoon (12:00 PM - 3:00 PM)</option>
                            <option value="late-afternoon">Late Afternoon (3:00 PM - 6:00 PM)</option>
                        </select>
                    </div>
                    <div>
                        <label for="projectType" class="block text-sm font-medium text-primary-200 mb-2">Project Type</label>
                        <select
                            id="projectType"
                            name="projectType"
                            required
                            class="w-full px-4 py-2 bg-primary-700 border border-primary-600 rounded-lg text-white focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                        >
                            <option value="">Please select...</option>
                            <option value="new-pool">New Pool Design</option>
                            <option value="pool-renovation">Pool Renovation</option>
                            <option value="spa-addition">Spa Addition</option>
                            <option value="landscaping">Landscaping</option>
                            <option value="consultation">General Consultation</option>
                        </select>
                    </div>
                    <div>
                        <label for="message" class="block text-sm font-medium text-primary-200 mb-2">Additional Information</label>
                        <textarea
                            id="message"
                            name="message"
                            rows="4"
                            class="w-full px-4 py-2 bg-primary-700 border border-primary-600 rounded-lg text-white focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                            placeholder="Tell us about your project, preferences, or any specific requirements..."
                        ></textarea>
                    </div>
                    <button
                        type="submit"
                        class="w-full bg-secondary-500 hover:bg-secondary-600 text-white font-bold py-3 px-6 rounded-lg transition duration-300"
                    >
                    Request a Consultation
                    </button>
                    <div id="formStatus" class="hidden mt-4 p-4 rounded-lg"></div>
                </form>
            </div>
        </div>
    </div>
</section>

<script>
    document.getElementById("designCenterForm").addEventListener("submit", async (e) => {
        e.preventDefault();
        const form = e.target;
        const statusDiv = document.getElementById("formStatus");
        const submitButton = form.querySelector('button[type="submit"]');

        try {
            submitButton.disabled = true;
            submitButton.textContent = "Booking...";

            const formData = new FormData(form);
            const response = await fetch("https://bojzue7ag6.execute-api.ap-southeast-2.amazonaws.com/contact", {
                method: "POST",
                body: JSON.stringify(Object.fromEntries(formData)),
                headers: {
                    "Content-Type": "application/json",
                },
            });

            if (response.ok) {
                statusDiv.className = "mt-4 p-4 rounded-lg bg-green-500 text-white";
                statusDiv.textContent = "Thank you for booking your consultation. We will contact you to confirm your appointment.";
                form.reset();
            } else {
                throw new Error("Form submission failed");
            }
        } catch (error) {
            statusDiv.className = "mt-4 p-4 rounded-lg bg-red-500 text-white";
            statusDiv.textContent = "Sorry, there was an error submitting your booking. Please try again.";
        } finally {
            submitButton.disabled = false;
            submitButton.textContent = "Book Consultation";
            statusDiv.classList.remove("hidden");
        }
    });
</script>